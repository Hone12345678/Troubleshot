{{> category-buttons categories}}

<!-- Content Section -->
<div class="flex flex-shrink justify-center overflow-x-hidden">
  <div class="lg:pt-12 text-center align-middle text-xl">
    <div class="lg:pl-52 pl-16 pb-8 px-6 text-center">
      <button id="highestPriority"
        class="bg-red-600 hover:bg-red-800 text-slate-100 font-bold py-2 px-4 pb-5 mb-2 w-48 rounded shadow-xl inline-block leading-none border-2 border-stone-900">
        Highest Priority
      </button>
      <button id="recentPost"
        class="bg-blue-600 hover:bg-blue-800 text-slate-100 font-bold py-2 px-4 pb-5 mb-2 w-48 rounded shadow-xl inline-block leading-none border-2 border-stone-900">
        Recent Posts
      </button>
      <button id="mostViewed"
        class="bg-indigo-500 hover:bg-indigo-700 text-slate-100 font-bold py-2 px-4 pb-5 mb-2 w-48 rounded shadow-xl inline-block leading-none border-2 border-stone-900">
        Most Viewed
      </button>
    </div>
    {{!-- loop through the solutions array --}}
    <div id="solutionCont" class="space-y-6 px-6">
      {{> solution-content sol}}
    </div>
  </div>
</div>

