{{#each this}}
<button id="{{id}}" data-catId="{{category_id}}" data-views="{{page_views}}" class="w-1/2 shadow-inner rounded bg-slate-700 border border-slate-500">
  <h2 class="text-center underline text-zinc-300 text-2xl">{{capitalize_first name}}</h2>
  <pre class="xs:pl-36 flex-wrap text-left w-3/4 text-slate-200 text-base truncate ...">{{solution}}</pre>
</button>
{{/each}} 